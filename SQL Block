CREATE DATABASE TABLEAU; 
USE TABLEAU ;
CREATE TABLE CLIENTS(
    ID_CLIENTS INT NOT NULL, 
    NOM VARCHAR(24) NOT NULL,
    ADRESSE VARCHAR(54) NOT NULL,
    PRIMARY KEY(ID_CLIENTS)
);

 
CREATE TABLE PRODUITS
(
    ID_PRODUIT INT NOT NULL,
    NOM VARCHAR(73)NOT NULL,
    PRIX DECIMAL(34,5)CHECK  (PRIX >0),
    PRIMARY KEY(ID_PRODUIT)
);

CREATE TABLE COMMANDE
(
    ID_ORDER INT NOT NULL,
    ID_CLIENTS INT NOT NULL,
    ID_PRODUITS INT NOT NULL, 
    QUANTITÃ‰ INT NOT NULL, 
    DATE_COMMANDE INT NOT NULL,
    PRIMARY KEY (ID_ORDER),
    FOREIGN KEY (ID_CLIENTS) REFERENCES CLIENTS(ID_CLIENTS),
    FOREIGN KEY (ID_PRODUITS) REFERENCES PRODUITS (ID_PRODUIT)
);
